<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".homeadmin">

    <TextView
        android:id="@+id/employee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/Admin"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/profile_user"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/employees_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Emps"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        app:layout_constraintTop_toBottomOf="@id/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/holiday_requests_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Holiday_Requests"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        app:layout_constraintTop_toBottomOf="@id/employees_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/notifications_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Notifications"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        app:layout_constraintTop_toBottomOf="@id/holiday_requests_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/personal_details_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Personal_details"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        app:layout_constraintTop_toBottomOf="@id/notifications_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/add_employee_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Add_employee"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        app:layout_constraintTop_toBottomOf="@id/personal_details_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Logout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>
